# ===================================
# PORTFOLIO ENVIRONMENT CONFIGURATION
# ===================================
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to version control

# -----------------------------------
# SITE CONFIGURATION
# -----------------------------------
# Your portfolio domain (without trailing slash)
NEXT_PUBLIC_SITE_URL=https://your-actual-domain.com

# Site metadata
NEXT_PUBLIC_SITE_NAME=Your Name | AI/ML Portfolio
NEXT_PUBLIC_SITE_AUTHOR=Your Name

# Twitter handle (without @)
NEXT_PUBLIC_TWITTER_HANDLE=yourusername

# -----------------------------------
# API CONFIGURATION
# -----------------------------------
# Backend API URL (FastAPI server)
NEXT_PUBLIC_API_URL=http://localhost:8000

# -----------------------------------
# SECURITY
# -----------------------------------
# JWT Secret Key (generate a strong random string)
# Use: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CSRF Secret (generate a strong random string)
CSRF_SECRET=your-csrf-secret-key-change-this

# Allowed Origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://your-actual-domain.com

# -----------------------------------
# DATABASE
# -----------------------------------
# SQLite (development)
DATABASE_URL=file:./dev.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@host:5432/database

# -----------------------------------
# EMAIL (Resend)
# -----------------------------------
# Get your API key at: https://resend.com
RESEND_API_KEY=re_xxxxxxxxxxxxx

# Email address to receive contact form submissions
CONTACT_EMAIL=your-email@domain.com

# From email (must be verified in Resend, or use default)
FROM_EMAIL=onboarding@resend.dev

# -----------------------------------
# ANALYTICS (Google Analytics 4)
# -----------------------------------
# Get your Measurement ID from Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# -----------------------------------
# ERROR TRACKING (Sentry)
# -----------------------------------
# Get your DSN from Sentry.io
NEXT_PUBLIC_SENTRY_DSN=https://your-key@sentry.io/project-id

# Enable Sentry in development (optional)
ENABLE_SENTRY=false

# -----------------------------------
# OPTIONAL: AGENT FEATURES
# -----------------------------------
# Enable AI agent demo features
NEXT_PUBLIC_AGENT_ENABLED=false
